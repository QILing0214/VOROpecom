<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper01">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4">

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="3"
                android:id="@+id/coache_note"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/coach_coache_raduis_green"
                android:textSize="50dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DÃ©but"
                android:id="@+id/coache_debut"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"


                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fin"
                android:id="@+id/coache_fin"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_alignTop="@+id/coache_debut"
                android:layout_marginLeft="310dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/03/2016"
                android:id="@+id/coache_button_debut"
                android:layout_below="@+id/coache_debut"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/06/2016"
                android:id="@+id/coache_button_fin"
                android:layout_below="@+id/coache_fin"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="125dp"
                android:text="Team"
                android:id="@+id/coache_coaching"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>
        <GridView
            android:layout_below="@+id/relativeLayout4"
            android:layout_marginTop="20dp"
            android:numColumns="2"
            android:gravity="center"
            android:columnWidth="100dp"
            android:stretchMode="columnWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:id="@+id/grid"
            android:paddingLeft="25dp"

            />
    </RelativeLayout>
