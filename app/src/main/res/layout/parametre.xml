<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper01">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J'autorise mon coach"
        android:id="@+id/textView8"

        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:textSize="15dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-à consulter le VOR de mes domaines"
        android:id="@+id/switch1"
        android:checked="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="#484646"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-à consulter le détail de mes domaines"
        android:id="@+id/switch2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#484646"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J'autorise ma hiérarchie"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView9"

        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:textSize="15dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-à consulter le VOR de mes domaines"
        android:id="@+id/switch3"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#484646"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-à consulter le détail de mes domaines"
        android:id="@+id/switch4"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#484646"/>

    <Button

        android:layout_width="190dp"
        android:layout_height="30dp"
        android:text="Valider"
        android:id="@+id/button9"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="@drawable/borderradius"
        android:layout_marginTop="40dp" />
</LinearLayout>