<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@drawable/wallpaper01"
    android:id="@+id/scrollview_note"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/toolbar_activity_note" tools:context="com.ad_imagine.voropecom.utilisateur.Note">


<RelativeLayout
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView

        android:layout_width="180dp"
        android:layout_height="170dp"
        android:text="3"
        android:id="@+id/textView_note"
        android:layout_centerHorizontal="true"
        android:background="@drawable/coach_coache_raduis_green"

        android:textColor="#ffffff"
        android:textSize="50dp"

        android:layout_alignParentBottom="false"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tres detendu"
        android:id="@+id/textView_comment"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le 7 juin 2016"
        android:id="@+id/textView_date"
        android:layout_below="@+id/textView_comment"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evénement"
        android:id="@+id/textView_nomtemps"
        android:layout_below="@+id/textView_date"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avant"

        android:layout_below="@+id/textView_date"

        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pendant"

        android:layout_below="@+id/textView_date"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Après"

        android:layout_below="@+id/textView_date"

        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="223dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton_avant"
        android:src="@drawable/arrowup"
        android:background="@drawable/whitecircle"
        android:layout_below="@+id/textView_date"
        android:layout_marginLeft="100dp"

        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_now"
        android:layout_below="@+id/textView_date"
        android:layout_centerHorizontal="true"


        android:src="@drawable/plus"
        android:background="@drawable/whitecircle"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton_apres"
        android:layout_alignTop="@+id/imageButton_now"

        android:src="@drawable/arrowdown"
        android:background="@drawable/whitecircle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOR par domaines"
        android:id="@+id/textView33"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#000000" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout1"
        android:layout_below="@+id/textView33"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>

</ScrollView>