<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@drawable/wallpaper01">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:id="@+id/imageView2"
            android:background="@drawable/logo_tuto"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cotez vos facteurs de stress"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actionnez les curseurs"
            android:id="@+id/textView11"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utilisez l‘échelle de cotation de 1 à 9"
            android:id="@+id/textView12"
            android:layout_below="@id/textView5"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="65dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pour information: "
            android:id="@+id/textView13"
            android:layout_marginLeft="65dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 indique que vous êtes:"
            android:id="@+id/textView14"
            android:textColor="#000000"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Extrêmement détendu (Zen)"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/emotion_raduis_green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 indique que vous êtes:"
            android:id="@+id/textView16"
            android:layout_marginLeft="65dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Légèrement tendu (En tension)"
            android:id="@+id/textView17"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/emotion_radius_orange"
            android:paddingLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 indique que vous êtes:"
            android:id="@+id/textView18"
            android:layout_marginLeft="65dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Extrêmement tendu (Burn out)"
            android:id="@+id/textView19"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/emotion_radius_red"
            android:paddingLeft="5dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout_content">

        </LinearLayout>


        <Button
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:text="Calculez votre VOR"
            android:id="@+id/button8"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@drawable/emotion_radius_valide"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="50dp"/>



    </LinearLayout>
</ScrollView>