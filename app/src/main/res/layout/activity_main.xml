<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper01"
    android:weightSum="1">



    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:background="@drawable/logo_authentification_01"
        android:layout_gravity="center_horizontal"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />


    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="@string/connecter"
        android:id="@+id/button"
        android:layout_marginTop="345dp"

        android:textColor="@android:color/white"
        android:background="@drawable/borderradius"
        android:layout_centerHorizontal="true"

        />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Pas de compte? "
    android:layout_below="@+id/button"

    android:layout_marginTop="29dp"
    android:layout_marginLeft="90dp"
    android:id="@+id/textView3"
    android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Inscrivez-vous!"
        android:layout_below="@+id/button"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView_inscrire"
        android:textStyle="italic"
        android:textColor="#000000"
        android:textColorLink="#000000"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coach"
        android:id="@+id/button_coach"
        android:layout_marginTop="450dp"
        />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:ems="17"
        android:id="@+id/editText"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:paddingLeft="50dp"
        android:hint="Identifiant"
        android:textSize="15dp"
        android:paddingStart="50dp"
        android:text="lorem@ipsum.fr"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="17"
        android:id="@+id/editText2"

        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="20dp"
        android:paddingLeft="50dp"
        android:textSize="15dp"
        android:hint="Mot de passe"
        android:text="aze"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView14"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="81dp"
        android:layout_marginLeft="46dp"
        android:src="@drawable/usershape"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView15"
        android:src="@drawable/security"
        android:layout_below="@+id/imageView14"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="46dp"
       />


</RelativeLayout>